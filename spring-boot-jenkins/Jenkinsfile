pipeline {
    agent any
    tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
					echo "Build initialized..."
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
				dir('spring-boot-jenkins') {
					sh 'mvn -DskipTests=true clean package' 
				}
            }
        }
		
        stage ('Test') {
            steps {
				dir('spring-boot-jenkins') {
					sh 'mvn test' 
				}
            }
            post {
                success {
					dir("spring-boot-jenkins") {
						junit 'target/surefire-reports/**/*.xml'
					}
                }
            }
        }		
		
        stage ('Deploy') {
            steps {
                sh '''
                    echo "Deploy to Server..."
                '''
            }
        }		
    }
}